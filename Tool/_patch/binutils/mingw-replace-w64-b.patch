     noconfigdirs="$noconfigdirs target-libffi"
     ;;
   x86_64-*-mingw*)
@@ -1160,9 +1160,9 @@ case "${target}" in
     # No ld support yet.
     noconfigdirs="$noconfigdirs libgui itcl ld"
     ;;
